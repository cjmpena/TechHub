<h1>Your Orders</h1>

<% @orders.each do |order| %>
 <h2>Order ID: <%= order.id %></h2>
 <p>Total: <%= order.total %></p>
 <p>Tax: <%= order.tax %></p>
 <p>Grand Total: <%= (order.total || 0) + (order.tax || 0) %></p>
 <h3>Products:</h3>
 <ul>
   <% order.products.each do |product| %>
     <li><%= product.name %></li>
   <% end %>
 </ul>
<% end %>
