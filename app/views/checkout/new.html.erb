<%= form_with(model: @order, url: checkout_path) do |form| %>
 <%= form.hidden_field :customer_id, value: current_user.id %>
 <%= form.hidden_field :total, value: @cart_total %>
 <%= form.label :address %>
 <%= form.text_field :address %>

 <%= form.label :province %>
 <%= form.collection_select :province_id, Province.all, :id, :name, id: 'province-select' %>

 <%= form.submit "Place Order" %>
<% end %>
